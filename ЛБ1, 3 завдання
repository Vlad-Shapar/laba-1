numbers = [0,1,3,-3,6,-4,8,9]

negative_numbers = []
positive_numbers = []

for number in numbers:
    if number < 0:
        negative_numbers.append(number)
    elif number > 0:
        positive_numbers.append(number)

negative_numbers.reverse()

print('Початковий список: ', numbers)
print('Найбільша цифра: ', max(numbers))
print('Від.ємні цифри навпаки: ', negative_numbers)
print('Додатні цифри: ', positive_numbers)
print('Середнє арифметичне: ', sum(positive_numbers)/len(positive_numbers)) 
